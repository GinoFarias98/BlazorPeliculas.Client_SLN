@using System.Linq.Expressions
@inherits InputTextArea
@* Herencia de InputTextArea *@

@typeparam TValue

<div>
	<label>@Label</label>
	<div>
		<InputTextArea @bind-value="CurrentValue"/> @* CurrentValue viene de InputTextArea *@
		<ValidationMessage For="For" />
	</div>
</div>

<div>
	<label>@Label (preview)</label>
	<div class="markdown-container" style="overflow:auto">
		<MostrarMarkdown ContenidoMarkdown="@CurrentValue">

		</MostrarMarkdown>
	</div>
</div>

@code {
	[Parameter]
	public string Label { get; set; } = "Campo";
	[Parameter]
	public Expression<Func<TValue>>? For { get; set; }

}
